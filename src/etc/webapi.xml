<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
	<!-- Additional endpoints for orders -->
	<route method="GET" url="/V1/dealer4dealer-substituteorders/order/:id">
		<service class="Magento\Sales\Api\OrderRepositoryInterface" method="get"/>
		<resources>
			<resource ref="Magento_Sales::actions_view" />
		</resources>
	</route>

	<route method="POST" url="/V1/dealer4dealer-substituteorders/order">
		<service class="Dealer4Dealer\SubstituteOrders\Api\OrderManagementInterface" method="create"/>
		<resources>
			<resource ref="Magento_Sales::create"/>
		</resources>
	</route>

	<route method="PUT" url="/V1/dealer4dealer-substituteorders/order">
		<service class="Dealer4Dealer\SubstituteOrders\Api\OrderManagementInterface" method="update"/>
		<resources>
			<resource ref="Magento_Sales::create"/>
		</resources>
	</route>
</routes>

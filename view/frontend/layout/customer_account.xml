<?xml version="1.0" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" label="Customer My Account (All Pages)" design_abstraction="custom">
    <body>

        <!-- Remove elements -->
        <referenceBlock name="customer-account-navigation-orders-link" remove="true"/>

        <!-- Add elements -->
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-substitute-orders" after="customer-account-navigation-downloadable-products-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Order history</argument>
                    <argument name="path" xsi:type="string">substitute/order</argument>
                </arguments>
            </block>
        </referenceBlock>

    </body>
</page>